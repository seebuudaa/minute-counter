{
    "name": "Time Tracker",
    "version": "1.0",
    "manifest_version": 2,
	"background":{
		"persistent":true,
		"scripts":["popup.js", "content.js"]
    }, 
    "browser_action": {
		"default_popup": "popup.html",
		"default_icon": "img/umuzi.png",
		"default_title": "Time is ticking"
    },
    "description": "A tool that can be used to check time used on Google Meets",
    "permissions": [
        "https://www.meet.google.com/", "webNavigation","tabs" ]
        
}